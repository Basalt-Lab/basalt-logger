{
  "name": "@basalt-lab/basalt-logger",
  "version": "1.6.0",
  "description": "Logger module for Basalt Framework",
  "main": "Build/App.js",
  "types": "Build/App.d.ts",
  "scripts": {
    "create-types": "tsc --emitDeclarationOnly && tsc-alias",
    "pkg::build": "tsc --noEmit && npm run create-types && ts-node esbuild.config.ts prod-build",
    "dev::build": "ts-node esbuild.config.ts",
    "dev::start": "node Build/App.js",
    "dev": "npm run dev::build && concurrently -c \"bgYellow.bold,bgBlue.bold\" \"npm:dev::watch*\"",
    "dev::watch::build": "ts-node esbuild.config.ts watch",
    "dev::watch::start": "cross-env NODE_ENV=development node --watch Build/App.js",
    "docs": "typedoc",
    "fix-lint": "eslint --fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "test:watch": "jest --watch -c jest.config.json",
    "test": "jest -c jest.config.json --ci --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Basalt-Lab/basalt-logger.git"
  },
  "keywords": [
    "basalt-logger",
    "basalt",
    "logger"
  ],
  "author": "Ruby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Basalt-Lab/basalt-logger/issues"
  },
  "homepage": "https://github.com/Basalt-Lab/basalt-logger#readme",
  "devDependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@tsconfig/node21": "^21.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.29",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.2"
  }
}
